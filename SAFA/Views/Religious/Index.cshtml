@model SAFA.Models.ViewModel.ReligiousFundVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Class <span class="semi-bold">Informations</span></h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a> <a href="#grid-config" data-toggle="modal" class="config"></a> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body ">

                <table class="table table-bordered center-all" id="myDataTable">
                    <thead>
                        <tr>

                            <th>ReligiousFundTypeId</th>
                            <th>ReligiousFundTypeName</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>






            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Add Area</h4>
            </div>
            <div class="modal-body">
                <form id="myCustomForm">

                    <div class="form-group">
                        @Html.HiddenFor(model => model.Id)
                        @Html.LabelFor(model => model.AreaName)
                        @Html.TextBoxFor(model => model.AreaName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AreaName, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address)
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Contact)
                        @Html.TextBoxFor(model => model.Contact, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Contact, null, new { @class = "text-danger" })
                    </div>

                </form>
                <div id="message">

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display: none;" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



@section scripts{

    <script src="~/Scripts/Custom/Area.js"></script>


}